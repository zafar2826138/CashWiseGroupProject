<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Sanity Tests">
    <test name="Checkout Test">
        <groups>
            <run>
                <include name = "sanity"> </include>
            </run>
        </groups>
        <classes>
            <class name="tests.exampleWebsites.AmazonTest"></class>
            <class name="tests.exampleWebsites.GoogleTest"></class>
            <class name="tests.exampleWebsites.EtsyTest"></class>
        </classes>
    </test>

    <test name="Login Test">
        <groups>
            <run>
                <include name="login"></include>
            </run>
        </groups>
        <classes>
            <class name = "tests.LoginTest"></class>
        </classes>
    </test>
</suite>